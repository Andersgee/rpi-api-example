generator client {
    provider = "cargo run -p prisma-cli"
    output   = "../src/db.rs"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id          String @id @default(uuid())
    displayName String
    posts       Post[]
}

model Post {
    id      String @id @default(uuid())
    content String
    user    User   @relation(fields: [userId], references: [id])
    userId  String
}
